            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="317dp" tools:layout_editor_absoluteX="84dp" android:id="@+id/editText5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="381dp" tools:layout_editor_absoluteX="84dp" android:id="@+id/editText6"/>
</android.support.constraint.ConstraintLayout>