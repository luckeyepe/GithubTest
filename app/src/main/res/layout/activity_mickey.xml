<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MickeyActivity">

    <Button
            android:text="Add Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mickeyAdd" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/edt_mickeyYearLevel"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edt_mickeyIDNumber" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="ID Number" android:inputType="number" android:textAlignment="center"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_mickeyFirstName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeyIDNumber" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="First Name" android:textAlignment="center"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_mickeyMiddleName" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeyFirstName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:hint="Middle Name"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_mickeyLastName" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeyMiddleName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:hint="Last Name"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_mickeyCourse" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeyLastName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Course" android:textAlignment="center"/>
    <EditText
            android:layout_width="275"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_mickeyYearLevel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeyCourse" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:hint="Year Level"/>
</android.support.constraint.ConstraintLayout>