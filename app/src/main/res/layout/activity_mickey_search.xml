<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.mickey_branch.MickeySearchActivity">

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt_mickeySearchIDNumber" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="Student ID Number" android:textAlignment="center"/>
    <android.support.v7.widget.CardView
            android:layout_width="368dp"
            android:layout_height="151dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_mickeySearchSearch"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.0"
            app:cardBackgroundColor="@color/colorPrimary" android:id="@+id/cardView2">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="ID Number:"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/textView"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="36dp" android:textSize="18sp"
                    android:textColor="@color/cardview_light_background"/>
            <TextView
                    android:text="Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:textSize="18sp"
                    android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/cardview_light_background"/>
            <TextView
                    android:text="Course - Year:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textSize="18sp"
                    android:textColor="@color/cardview_light_background"/>
            <TextView
                    android:text="@string/default_student_id_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_searchMickeyIDNumber" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
                    android:layout_marginStart="16dp" android:textSize="18sp"
                    android:textColor="@color/cardview_light_background"/>
            <TextView
                    android:text="@string/default_student_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mickeySearchFullName" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_searchMickeyIDNumber"
                    app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="16dp"
                    android:textSize="18sp" android:textColor="@color/cardview_light_background"/>
            <TextView
                    android:text="@string/default_student_course_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mickeySearchCourseYear" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_mickeySearchFullName"
                    app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="16dp"
                    android:textSize="18sp" android:textColor="@color/cardview_light_background"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mickeySearchSearch" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_mickeySearchIDNumber" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mickeySearchDelete" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mickeySearchUpdate" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"/>
</android.support.constraint.ConstraintLayout>